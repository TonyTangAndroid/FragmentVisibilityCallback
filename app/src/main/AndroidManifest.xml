<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
          package="com.github.tonytanganadroid.precisefragment.app">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".fragment.visibility.MainActivity"
            android:label="@string/app_name">
        </activity>
        <activity
            android:name=".DemoActivity"
            android:label="@string/app_name">
            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>

                <category android:name="android.intent.category.LAUNCHER"/>
            </intent-filter>
        </activity>

        <activity
            android:name=".ViewPagerActivity"
            android:label="@string/app_name_1"/>


        <activity
            android:name=".fragment.visibility.SingleFragmentActivity"
            android:label="@string/app_name_2"/>


    </application>

</manifest>